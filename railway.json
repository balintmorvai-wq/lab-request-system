{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPath": "backend/nixpacks.toml"
  },
  "deploy": {
    "startCommand": "cd backend && gunicorn app:app --bind 0.0.0.0:$PORT --timeout 60 --workers 1",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
